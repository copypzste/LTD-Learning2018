<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.windows10.ltd_learning">
     
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchActivity"></activity>
        <activity android:name=".CourseDetail"></activity>
        <activity android:name=".Register"></activity>
        <activity android:name=".AddRatingActivity"></activity>
        <activity android:name=".CourseDetailForMyCourse"></activity>
        <activity android:name=".PdfActivityActivity"></activity>
        <activity android:name=".CommentActivity"></activity>
        <activity android:name=".RpliedCommentActivity"></activity>
        <activity android:name=".ImageDialog" android:theme="@style/myDialogTheme" />
        <activity android:name=".FullScreenVideoActivity"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity android:name=".UploadPictureActivity"></activity>

    </application>

</manifest>